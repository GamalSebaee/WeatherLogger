<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.app.weatherapp.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_nav_home_to_weatherDetailsFragment"
            app:destination="@id/weatherDetailsFragment" />
        <deepLink
            android:id="@+id/deepLink2"
            app:uri="https://samples.openweathermap.org/data/2.5/weather?lat={lat}&amp;lon={lng}&amp;appid={appid}" />

        <argument android:name="lat" app:argType="string"/>
        <argument android:name="lng" app:argType="string"/>
        <argument android:name="appid" app:argType="string"/>
    </fragment>
    <fragment
        android:id="@+id/weatherDetailsFragment"
        android:name="com.app.weatherapp.ui.details.WeatherDetailsFragment"
        tools:layout="@layout/fragment_weather_details"
        app:popUpTo="@+id/nav_home"
        android:label="WeatherDetailsFragment" >
        <argument
            android:name="weather_data"
            app:argType="com.app.weatherapp.data.remote.WeatherDataResponse" />
    </fragment>


</navigation>